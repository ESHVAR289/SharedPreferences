<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.einfoplanet.sharedpreferences.MainActivity"
    android:contextClickable="false"
    android:touchscreenBlocksFocus="false"
    android:background="#c24067">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD"
        android:onClick="loadData"
        android:id="@+id/btnLoadData"
        android:layout_alignTop="@+id/btnMoveBack"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnMoveBack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVE BACK"
        android:onClick="moveBack"
        android:id="@+id/btnMoveBack"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/etLoadPassword"
        android:layout_alignEnd="@+id/etLoadPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLoadUsrname"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/textView"
        android:layout_below="@+id/btnSave"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etLoadUsrname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/textView2"
        android:layout_below="@+id/etLoadUsrname"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etLoadUsrname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLoadPassword"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2" />
</RelativeLayout>
